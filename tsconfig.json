{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "index.tsx", "App.tsx", "src/vite-env.d.ts"],
  "exclude": [
    "node_modules",
    "src/utils/formatters/DateAndTime.ts",
    "src/utils/formatters/Number.ts",
    "src/utils/parsers/LeadDataParser.ts",
    "src/utils/validators/InputValidator.ts",
    "src/servicos/chat/ChatService.ts",
    "src/servicos/chat/FallbackRule.ts",
    "src/servicos/chat/FallbackRuleImpl.ts",
    "src/servicos/chat/modelos/AiResponse.ts",
    "src/servicos/api/ApiInterfaces.ts",
    "src/servicos/chat/ChatFlowHandler.ts",
    "src/servicos/chat/ChatInterfaces.ts",
    "src/servicos/chat/handlers/SummaryHandler.ts",
    "src/servicos/chat/handlers/UserMessageHandler.ts",
    "src/servicos/chat/handlers/DateTimeSelectionHandler.ts",
    "src/servicos/chat/handlers/AcaoHandler.ts",
    "src/servicos/chat/handlers/ConfirmationHandler.ts",
    "src/servicos/chat/handlers/CorrectionHandler.ts",
    "src/servicos/chat/handlers/FallbackDateTimeHandler.ts",
    "src/servicos/chat/handlers/FallbackObjectionHandler.ts",
    "src/servicos/chat/handlers/FallbackSummaryHandler.ts",
    "src/servicos/chat/handlers/ManipuladorConfirmacao.ts",
    "src/servicos/chat/handlers/ManipuladorCorrecao.ts",
    "src/servicos/chat/handlers/ManipuladorSelecaoDataHora.ts",
    "src/servicos/chat/handlers/ManipuladorDadosFallback.ts",
    "src/servicos/chat/handlers/ManipuladorDataHoraFallback.ts",
    "src/servicos/chat/handlers/ManipuladorObjecaoFallback.ts",
    "src/servicos/chat/handlers/ManipuladorResumoFallback.ts",
    "src/hooks/useAudioPlayer.ts",
    "src/hooks/useChatManager.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
